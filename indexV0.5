    // Booking System
    class CarPolishBookingSystem {
        constructor() {
            this.maxAppointmentsPerDay = 2;
            this.availableTimeSlots = ['09:00', '11:00', '13:00', '15:00'];
            this.bookings = this.loadBookings();
            this.selectedTimeSlot = null;
            this.selectedDate = null;
            this.currentCalendarDate = new Date();
            this.initializeSystem();
        }

        initializeSystem() {
            this.setupEventListeners();
            this.renderCalendar();
            this.updateTimeSlots();
        }

        setupEventListeners() {
            const bookingForm = document.getElementById('bookingForm');
            const prevMonth = document.getElementById('prevMonth');
            const nextMonth = document.getElementById('nextMonth');
            if (bookingForm) bookingForm.addEventListener('submit', (e) => this.handleBookingSubmission(e));
            if (prevMonth) prevMonth.addEventListener('click', () => this.navigateMonth(-1));
            if (nextMonth) nextMonth.addEventListener('click', () => this.navigateMonth(1));
            const serviceDropdown = document.getElementById('service');
            if (serviceDropdown) {
                serviceDropdown.addEventListener('change', () => {
                    if (this.selectedDate && this.selectedTimeSlot) {
                        document.getElementById('personalSection').style.display = 'block';
                    }
                });
            }
        }

        navigateMonth(direction) {
            this.currentCalendarDate.setMonth(this.currentCalendarDate.getMonth() + direction);
            this.renderCalendar();
        }

        renderCalendar() {
            const year = this.currentCalendarDate.getFullYear();
            const month = this.currentCalendarDate.getMonth();
            const monthNames = ['January','February','March','April','May','June','July','August','September','October','November','December'];
            document.getElementById('calendarTitle').textContent = `${monthNames[month]} ${year}`;
            const firstDay = new Date(year, month, 1);
            const lastDay = new Date(year, month + 1, 0);
            const daysInMonth = lastDay.getDate();
            const startingDayOfWeek = firstDay.getDay();
            const today = new Date();
            const todayStr = today.toISOString().split('T')[0];
            const calendarDays = document.getElementById('calendarDays');
            calendarDays.innerHTML = '';
            for (let i = 0; i < startingDayOfWeek; i++) {
                const emptyDay = document.createElement('div');
                emptyDay.className = 'calendar-day past';
                calendarDays.appendChild(emptyDay);
            }
            for (let day = 1; day <= daysInMonth; day++) {
                const date = new Date(year, month, day);
                const dateStr = date.toISOString().split('T')[0];
                const dayBookings = this.getBookingsForDate(dateStr);
                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day';
                dayElement.dataset.date = dateStr;
                if (date < new Date(todayStr) && dateStr !== todayStr) {
                    dayElement.classList.add('past');
                } else {
                    if (dayBookings.length === 0) {
                        dayElement.classList.add('available');
                    } else if (dayBookings.length >= this.maxAppointmentsPerDay) {
                        dayElement.classList.add('fully-booked');
                    } else {
                        dayElement.classList.add('available');
                    }
                    dayElement.addEventListener('click', () => this.selectDate(dateStr, dayElement));
                }
                if (dateStr === this.selectedDate) {
                    dayElement.classList.add('selected');
                }
                const dayNumber = document.createElement('div');
                dayNumber.className = 'day-number';
                dayNumber.textContent = day;
                dayElement.appendChild(dayNumber);
                calendarDays.appendChild(dayElement);
            }
        }

        selectDate(dateStr, dayElement) {
            document.querySelectorAll('.calendar-day.selected').forEach(day => day.classList.remove('selected'));
            dayElement.classList.add('selected');
            this.selectedDate = dateStr;
            document.getElementById('serviceSection').style.display = 'block';
            this.updateTimeSlots();
        }

        updateTimeSlots() {
            const timeSlotsContainer = document.getElementById('timeSlots');
            if (!this.selectedDate) {
                timeSlotsContainer.innerHTML = '<p style="text-align:center;color:#666;">Please select a date from the calendar first</p>';
                return;
            }
            const dayBookings = this.getBookingsForDate(this.selectedDate);
            const availableSlots = this.getAvailableSlots(this.selectedDate, dayBookings);
            timeSlotsContainer.innerHTML = '';
            this.availableTimeSlots.forEach(slot => {
                const slotElement = document.createElement('div');
                slotElement.className = 'time-slot';
                slotElement.textContent = this.formatTime(slot);
                slotElement.dataset.time = slot;
                if (!availableSlots.includes(slot)) {
                    slotElement.classList.add('unavailable');
                    slotElement.title = 'This slot is not available';
                } else {
                    slotElement.addEventListener('click', () => this.selectTimeSlot(slotElement));
                }
                timeSlotsContainer.appendChild(slotElement);
            });
            this.showBookingStatus(this.selectedDate, dayBookings.length);
        }

        getBookingsForDate(date) { return this.bookings.filter(booking => booking.date === date); }
        getAvailableSlots(date, dayBookings) { if (dayBookings.length >= this.maxAppointmentsPerDay) return []; const booked = dayBookings.map(b=>b.time); return this.availableTimeSlots.filter(s=>!booked.includes(s)); }

        selectTimeSlot(slotElement) {
            document.querySelectorAll('.time-slot.selected').forEach(slot => slot.classList.remove('selected'));
            slotElement.classList.add('selected');
            this.selectedTimeSlot = slotElement.dataset.time;
            if (document.getElementById('service').value) { document.getElementById('personalSection').style.display = 'block'; }
        }

        showBookingStatus(date, bookingCount) {
            const remaining = this.maxAppointmentsPerDay - bookingCount;
            const statusText = remaining > 0 ? `${remaining} slot(s) remaining for ${date}` : `Fully booked for ${date}`;
            let statusElement = document.getElementById('bookingStatus');
            if (!statusElement) { statusElement = document.createElement('p'); statusElement.id = 'bookingStatus'; statusElement.style.textAlign = 'center'; statusElement.style.marginTop = '10px'; statusElement.style.fontWeight = 'bold'; document.getElementById('timeSlots').appendChild(statusElement); }
            statusElement.textContent = statusText;
            statusElement.style.color = remaining > 0 ? '#27ae60' : '#e74c3c';
        }

        handleBookingSubmission(e) {
            e.preventDefault();
            const name = document.getElementById('customerName').value.trim();
            const phone = document.getElementById('phone').value.trim();
            const email = document.getElementById('email').value.trim();
            const service = document.getElementById('service').value;
            const carDetails = document.getElementById('carDetails').value.trim();
            if (!name || !phone || !email || !service || !this.selectedDate || !carDetails || !this.selectedTimeSlot) { this.showErrorMessage('Please fill in all required fields, select a date from the calendar, and choose a time slot.'); return; }
            const dayBookings = this.getBookingsForDate(this.selectedDate);
            if (dayBookings.length >= this.maxAppointmentsPerDay) { this.showErrorMessage('Sorry, this date is now fully booked. Please select another date.'); this.renderCalendar(); this.updateTimeSlots(); return; }
            const bookedSlots = dayBookings.map(booking => booking.time);
            if (bookedSlots.includes(this.selectedTimeSlot)) { this.showErrorMessage('Sorry, this time slot is no longer available. Please select another slot.'); this.updateTimeSlots(); return; }
            const bookingData = this.collectBookingData();
            if (this.saveBooking(bookingData)) { this.showSuccessMessage(); this.sendConfirmation(bookingData); this.resetForm(); } else { this.showErrorMessage(); }
        }

        collectBookingData() {
            return { id: this.generateBookingId(), customerName: document.getElementById('customerName').value.trim(), phone: document.getElementById('phone').value.trim(), email: document.getElementById('email').value.trim(), service: document.getElementById('service').value, date: this.selectedDate, time: this.selectedTimeSlot, carDetails: document.getElementById('carDetails').value.trim(), notes: document.getElementById('notes').value.trim(), bookedAt: new Date().toISOString(), status: 'confirmed' };
        }

        saveBooking(bookingData) {
            try { this.bookings.push(bookingData); localStorage.setItem('carPolishBookings', JSON.stringify({ bookings: this.bookings, settings: { maxAppointmentsPerDay: this.maxAppointmentsPerDay, availableTimeSlots: this.availableTimeSlots }, lastUpdated: new Date().toISOString() })); this.renderCalendar(); return true; } catch { return false; }
        }

        loadBookings() { try { const stored = localStorage.getItem('carPolishBookings'); if (stored) { const data = JSON.parse(stored); return data.bookings || []; } } catch {} return []; }
        generateBookingId() { return 'CPB_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9); }
        formatTime(time24) { const [hours, minutes] = time24.split(':'); const hour = parseInt(hours); const ampm = hour >= 12 ? 'PM' : 'AM'; const hour12 = hour % 12 || 12; return `${hour12}:${minutes} ${ampm}`; }
        sendConfirmation(bookingData) { alert(`Confirmation sent to ${bookingData.email} and ${bookingData.phone}`); }
        showSuccessMessage(message = null) { const successDiv = document.getElementById('successMessage'); const errorDiv = document.getElementById('errorMessage'); if (message) successDiv.querySelector('p').textContent = message; successDiv.style.display = 'block'; errorDiv.style.display = 'none'; setTimeout(() => { successDiv.style.display = 'none'; }, 4000); }
        showErrorMessage(message = 'Please check all fields and try again.') { const errorDiv = document.getElementById('errorMessage'); const successDiv = document.getElementById('successMessage'); errorDiv.querySelector('p').textContent = message; errorDiv.style.display = 'block'; successDiv.style.display = 'none'; setTimeout(() => { errorDiv.style.display = 'none'; }, 4000); }
        resetForm() { document.getElementById('bookingForm').reset(); this.selectedTimeSlot = null; this.selectedDate = null; document.getElementById('personalSection').style.display = 'none'; document.querySelectorAll('.time-slot.selected').forEach(slot => slot.classList.remove('selected')); document.querySelectorAll('.calendar-day.selected').forEach(day => day.classList.remove('selected')); this.updateTimeSlots(); }
    }
